<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <!--Mô tả sản phẩm-->
    <link href="~/Asset/Client/ItemCSS/style.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!-- Fontawesome core CSS -->
    <link href="~/fonts/css/font-awesome.min.css" rel="stylesheet" />
    <!--Slide Show Css -->
    <link href="~/Asset/Client/css/main-style.css" rel="stylesheet" />
    <!-- custom CSS here -->
    <link href="~/Asset/Client/css/style.css" rel="stylesheet" />
    <!-- Cart-->
    <link href="~/Asset/Client/Cart/style.css" rel="stylesheet" />
    <!--Custom Css-->
    <style>
        #fix {
            min-height: 295px;
        }

        #fixed{
            position: fixed;
            bottom: 0;
            right: 0;
        }
    </style>
    <!--Core JavaScript file  -->
    <script src="~/Scripts/jquery-3.1.1.min.js" type="text/javascript"></script>

    <link href="~/Asset/Client/Notification/jquery.growl.css" rel="stylesheet" />
    @*<script src="~/Content/js/jquery-1.10.2.js"></script>*@

    <!--bootstrap JavaScript file  -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--Notification-->
    <script src="~/Asset/Client/Notification/jquery.growl.js"></script>

</head>
<body>

    @Html.Partial("_PartialNav");

    @RenderSection("Slide", required: false)


    <div class="container" id="fix">
        <div class="row">

            @RenderSection("Category", required: false)


            @RenderBody()

            <div id="fixed">
                <a href="#"><i class="fa fa-arrow-up fa-3x" aria-hidden="true"></i></a>
            </div>

        </div>
    </div>

    @Html.Partial("_PartialFooter")

    <script src="~/Asset/Client/js/jquery.catslider.js"></script>
    <script src="~/Asset/Client/js/modernizr.custom.63321.js"></script>
    @RenderSection("jsFooter", required: false)
    <script>
        $(function () {

            $('#mi-slider').catslider();

        });
    </script>
</body>
</html>


