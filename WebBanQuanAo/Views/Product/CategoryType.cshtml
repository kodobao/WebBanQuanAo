
@model PagedList.IPagedList<Models.EntityFramework.MATHANG>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Loại hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

@section Slide{
    @{Html.RenderAction("Slide", "Home");}
}

@section Category {
    @{Html.RenderAction("Category", "Product");}
}


<div class="col-md-9">
    <div class="row">
        @foreach (var item in Model)
        {
            var url = "/xem-chi-tiet/" + item.metatitle + "/" + item.ma;
            <div class="col-md-4 text-center col-sm-4 col-xs-4" style="padding-bottom: 15px">
                <div class="thumbnail product-box">
                    <img alt="@item.tenhang" src="~/Data/images/@item.hinhanh">
                    <div class="caption">
                        <h3>@item.tenhang</h3>
                        <p>Price : <strong>@(item.giaban.HasValue ? item.giaban.Value.ToString("N0") : "Liên hệ") đ</strong>  </p>
                        <p>Ptional dismiss button in tional dismiss button in   </p>
                        <p><a href="@Url.Action("AddItemCart", "Cart", new { @id = item.ma})" class="btn btn-success btn-order" role="button">Đặt mua</a> <a href="@url" type="button" class="btn btn-info">Xem chi tiết</a></p>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("CategoryType","Product", new { @id = ViewBag.Id, page }))
        </div>
    </div>


</div>